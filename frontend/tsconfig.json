{
    "compilerOptions": {
        "baseUrl": "src/",
        "paths": {
            "@/context": [
                "./__context__/"
            ],
            "@/hooks": [
                "./__hooks__/"
            ],
            "@/typings/*": [
                "./__typings__/*"
            ],
            "@/lib/*": [
                "./__lib__/*"
            ],
            "@/theme": [
                "./__theme__/"
            ],
            "@/tokens": [
                "./__tokens__/"
            ],
            "@/components": [
                "./components/"
            ]
        },
        "target": "es5",
        "module": "esnext",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "noEmit": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve"
    },
    "exclude": [
        "node_modules",
        ".vscode",
        ".github",
    ],
    "include": [
        "next-env.d.ts*",
        "@typings/*",
        "pages",
        "src",
    ]
}